generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id           String   @id @default(cuid())
  repoUrl      String   @unique
  name         String
  description  String
  tech         Json?           // was String[]
  stars        Int      @default(0)
  forks        Int      @default(0)
  lastCommitAt DateTime?
  highlights   Json?           // was String[]
  featured     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Profile {
  id        String   @id @default(cuid())
  name      String
  headline  String
  about     String
  skills    Json           // was String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
